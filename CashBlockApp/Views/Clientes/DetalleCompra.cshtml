@model CashBlockApp.Models.Entities.Venta

@{
    ViewData["Title"] = "Detalle de Compra";
}

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>Detalle de Compra #@Model.IdVenta</h2>
            <a asp-action="MisCompras" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Historial
            </a>
        </div>
    </div>

    <!-- Información General -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Información General</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th width="40%">Fecha de Venta:</th>
                                <td>@(Model.FechaVenta?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Total Productos:</th>
                                <td><span class="badge bg-info">@Model.TotalProductos</span></td>
                            </tr>
                            <tr>
                                <th>Precio Total:</th>
                                <td class="text-success fw-bold">$@string.Format("{0:N2}", Model.PrecioTotal ?? 0)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Datos del Cliente y Empleado -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Participantes</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            @if (Model.CedulaClienteNavigation != null)
                            {
                                <tr>
                                    <th width="40%">Cliente:</th>
                                    <td>@Model.CedulaClienteNavigation.Nombre @Model.CedulaClienteNavigation.Apellido</td>
                                </tr>
                                <tr>
                                    <th>Cédula:</th>
                                    <td>@Model.CedulaCliente</td>
                                </tr>
                            }
                            @if (Model.CedulaEmpleadoNavigation != null)
                            {
                                <tr>
                                    <th>Atendido por:</th>
                                    <td>@Model.CedulaEmpleadoNavigation.Nombre @Model.CedulaEmpleadoNavigation.Apellido</td>
                                </tr>
                                <tr>
                                    <th>Cargo:</th>
                                    <td><span class="badge bg-secondary">@Model.CedulaEmpleadoNavigation.Cargo</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cart"></i> Productos Comprados</h5>
                </div>
                <div class="card-body">
                    @if (Model.ProductoVenta != null && Model.ProductoVenta.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-end">Precio Unitario</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pv in Model.ProductoVenta)
                                    {
                                        var producto = pv.IdProductoNavigation;
                                        var cantidad = pv.CantidadVendida ?? 0;
                                        var precioUnitario = producto?.PrecioVenta ?? 0;
                                        var subtotal = cantidad * precioUnitario;

                                        <tr>
                                            <td>
                                                <strong>@(producto?.Nombre ?? "Producto desconocido")</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@cantidad</span>
                                            </td>
                                            <td class="text-end">$@string.Format("{0:N2}", precioUnitario)</td>
                                            <td class="text-end fw-bold">$@string.Format("{0:N2}", subtotal)</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3" class="text-end">TOTAL:</th>
                                        <th class="text-end text-success">$@string.Format("{0:N2}", Model.PrecioTotal ?? 0)</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle"></i> No hay productos registrados para esta venta.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Métodos de Pago -->
    @if (Model.MetodoPagos != null && Model.MetodoPagos.Any())
    {
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-credit-card"></i> Método de Pago</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var metodo in Model.MetodoPagos)
                        {
                            <p class="mb-1">
                                <strong>Tipo:</strong> @metodo.TipoMetodo<br />
                                <strong>Detalle:</strong> @metodo.NombreMetodo
                            </p>
                        }
                    </div>
                </div>
            </div>

            <!-- Factura -->
            @if (Model.Facturas != null && Model.Facturas.Any())
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-receipt"></i> Factura</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var factura in Model.Facturas)
                            {
                                <p class="mb-1">
                                    <strong>N° Factura:</strong> @factura.IdFactura<br />
                                    <strong>Fecha:</strong> @(factura.FechaVenta?.ToString("dd/MM/yyyy") ?? "N/A")<br />
                                    <strong>Total:</strong> <span class="text-success fw-bold">$@string.Format("{0:N2}", factura.PrecioTotal ?? 0)</span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Botón Imprimir/Descargar -->
    <div class="row">
        <div class="col-12 text-center mb-4">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer"></i> Imprimir Detalle
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        @@media print {
            .btn, .card-header {
                display: none !important;
            }
        }
    </style>
}