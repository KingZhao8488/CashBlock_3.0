@model CashBlockApp.Models.Entities.Venta

@{
    ViewData["Title"] = "Detalle de Compra";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Detalle de Compra #@Model.IdVenta</h2>
            <a asp-action="MisCompras" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Historial
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Información general -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Información de la Compra</h5>
                </div>
                <div class="card-body">
                    <p><strong>Fecha:</strong> @Model.FechaVenta?.ToString("dd/MM/yyyy")</p>
                    <p><strong>Cliente:</strong> @Model.CedulaClienteNavigation?.Nombre @Model.CedulaClienteNavigation?.Apellido</p>
                    <p><strong>Cédula:</strong> @Model.CedulaCliente</p>
                    <p><strong>Vendedor:</strong> @Model.CedulaEmpleadoNavigation?.Nombre @Model.CedulaEmpleadoNavigation?.Apellido</p>
                    <p><strong>Total Productos:</strong> @Model.TotalProductos unidades</p>
                </div>
            </div>
        </div>

        <!-- Método de pago -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Información de Pago</h5>
                </div>
                <div class="card-body">
                    @if (Model.MetodoPagos != null && Model.MetodoPagos.Any())
                    {
                        var metodo = Model.MetodoPagos.First();
                        <p><strong>Tipo:</strong> @metodo.TipoMetodo</p>
                        <p><strong>Método:</strong> @metodo.NombreMetodo</p>
                        <h3 class="text-success mt-3">Total: $@string.Format("{0:N2}", Model.PrecioTotal)</h3>
                    }
                    else
                    {
                        <p class="text-muted">No se registró método de pago</p>
                    }

                    @if (Model.Facturas != null && Model.Facturas.Any())
                    {
                        <p class="mt-3"><strong>Factura:</strong> #@Model.Facturas.First().IdFactura</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Productos comprados -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Productos Comprados</h5>
        </div>
        <div class="card-body">
            @if (Model.ProductoVenta != null && Model.ProductoVenta.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pv in Model.ProductoVenta)
                            {
                                var subtotal = (pv.IdProductoNavigation?.PrecioVenta ?? 0) * (pv.CantidadVendida ?? 0);
                                <tr>
                                    <td>@pv.IdProductoNavigation?.Nombre</td>
                                    <td>@pv.CantidadVendida</td>
                                    <td>$@string.Format("{0:N2}", pv.IdProductoNavigation?.PrecioVenta)</td>
                                    <td><strong>$@string.Format("{0:N2}", subtotal)</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-dark">
                                <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                <td><strong>$@string.Format("{0:N2}", Model.PrecioTotal)</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No hay productos en esta compra</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}