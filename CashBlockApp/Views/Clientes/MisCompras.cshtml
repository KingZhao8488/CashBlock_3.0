@model IEnumerable<CashBlockApp.Models.Entities.Venta>

@{
    ViewData["Title"] = "Mi Historial de Compras";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Mi Historial de Compras</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Panel
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var venta in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-receipt"></i> Venta #@venta.IdVenta
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Fecha:</strong>
                                @(venta.FechaVenta?.ToString("dd/MM/yyyy") ?? "N/A")
                            </p>
                            <p class="mb-2">
                                <strong>Total Productos:</strong>
                                <span class="badge bg-info">@venta.TotalProductos</span>
                            </p>
                            <h4 class="text-success mb-3">
                                Total: $@string.Format("{0:N2}", venta.PrecioTotal ?? 0)
                            </h4>

                            @if (venta.CedulaEmpleadoNavigation != null)
                            {
                                <p class="text-muted small mb-2">
                                    <strong>Atendido por:</strong><br />
                                    @venta.CedulaEmpleadoNavigation.Nombre @venta.CedulaEmpleadoNavigation.Apellido
                                </p>
                            }

                            @if (venta.ProductoVenta != null && venta.ProductoVenta.Any())
                            {
                                <hr />
                                <p class="mb-2"><strong>Productos:</strong></p>
                                <ul class="list-unstyled small">
                                    @foreach (var pv in venta.ProductoVenta.Take(3))
                                    {
                                        <li>
                                            <i class="bi bi-box"></i>
                                            @(pv.IdProductoNavigation?.Nombre ?? "Producto")
                                            (x@pv.CantidadVendida)
                                        </li>
                                    }
                                    @if (venta.ProductoVenta.Count() > 3)
                                    {
                                        <li class="text-muted">
                                            <i class="bi bi-three-dots"></i>
                                            Y @(venta.ProductoVenta.Count() - 3) más...
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <a asp-action="DetalleCompra" asp-route-id="@venta.IdVenta"
                               class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> Ver Detalle Completo
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aún no tienes compras registradas.
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}