@model IEnumerable<CashBlockApp.Models.Entities.Producto>

@{
    ViewData["Title"] = "Catálogo de Productos";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Catálogo de Productos</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Panel
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Productos" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <label>Buscar Producto</label>
                        <input type="text" name="buscar" class="form-control" placeholder="Nombre del producto" value="@ViewBag.Buscar" />
                    </div>
                    <div class="col-md-4">
                        <label>Categoría</label>
                        <select name="categoriaId" class="form-control">
                            <option value="">Todas las categorías</option>
                            @if (ViewBag.Categorias != null)
                            {
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    <option value="@cat.IdCategoria" selected="@(ViewBag.CategoriaSeleccionada == cat.IdCategoria)">
                                        @cat.NombreCategoria
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Productos" class="btn btn-secondary">Limpiar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de productos -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@producto.Nombre</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <strong>Categorías:</strong>
                                @if (producto.IdCategoria != null && producto.IdCategoria.Any())
                                {
                                    @string.Join(", ", producto.IdCategoria.Select(c => c.NombreCategoria))
                                }
                                else
                                {
                                    <span>Sin categoría</span>
                                }
                            </p>
                            <p class="mb-2">
                                <strong>Stock disponible:</strong>
                                <span class="badge @(producto.CantidadDisponible > 10 ? "bg-success" : producto.CantidadDisponible > 0 ? "bg-warning" : "bg-danger")">
                                    @producto.CantidadDisponible unidades
                                </span>
                            </p>
                            <h3 class="text-success mb-3">$@string.Format("{0:N2}", producto.PrecioVenta)</h3>
                            @if (producto.IdProveedorNavigation != null)
                            {
                                <p class="text-muted small">Proveedor: @producto.IdProveedorNavigation.Nombre</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No se encontraron productos disponibles.
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}