@model CashBlockApp.Models.Entities.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Eliminar Cliente</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-danger">
                <h4 class="alert-heading"><i class="bi bi-exclamation-octagon"></i> ¡Advertencia!</h4>
                <p>¿Está seguro de que desea eliminar este cliente?</p>
                <hr>
                <p class="mb-0">Esta acción <strong>NO</strong> se puede deshacer.</p>
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Datos del Cliente a Eliminar</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Cédula:</dt>
                        <dd class="col-sm-8">@Model.CedulaCliente</dd>

                        <dt class="col-sm-4">Nombre Completo:</dt>
                        <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>

                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@(Model.Telefono ?? "No especificado")</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "No especificado")</dd>

                        <dt class="col-sm-4">Dirección:</dt>
                        <dd class="col-sm-8">@(Model.Direccion ?? "No especificada")</dd>

                        <dt class="col-sm-4">Usuario:</dt>
                        <dd class="col-sm-8">@Model.IdUsuarioNavigation?.NombreUsuario</dd>

                        <dt class="col-sm-4">Perfil:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.IdPerfilesNavigation?.Rol</span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CedulaCliente" />

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Sí, Eliminar Cliente
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> No, Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}