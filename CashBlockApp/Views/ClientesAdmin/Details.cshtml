@model CashBlockApp.Models.Entities.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-info-circle"></i> Detalles del Cliente</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Información Completa del Cliente</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-credit-card"></i> Cédula:</dt>
                        <dd class="col-sm-8">@Model.CedulaCliente</dd>

                        <dt class="col-sm-4"><i class="bi bi-person"></i> Nombre Completo:</dt>
                        <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>

                        <dt class="col-sm-4"><i class="bi bi-telephone"></i> Teléfono:</dt>
                        <dd class="col-sm-8">@(Model.Telefono ?? "No especificado")</dd>

                        <dt class="col-sm-4"><i class="bi bi-envelope"></i> Email:</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "No especificado")</dd>

                        <dt class="col-sm-4"><i class="bi bi-geo-alt"></i> Dirección:</dt>
                        <dd class="col-sm-8">@(Model.Direccion ?? "No especificada")</dd>

                        <dt class="col-sm-4"><i class="bi bi-person-badge"></i> Usuario:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IdUsuarioNavigation != null)
                            {
                                <span>@Model.IdUsuarioNavigation.NombreUsuario</span>
                                <span class="badge bg-secondary">ID: @Model.IdUsuario</span>
                            }
                            else
                            {
                                <span class="text-muted">Sin usuario asignado</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-shield-check"></i> Perfil:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IdPerfilesNavigation != null)
                            {
                                <span class="badge bg-success">@Model.IdPerfilesNavigation.Rol</span>
                            }
                            else
                            {
                                <span class="text-muted">Sin perfil asignado</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.CedulaCliente" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar Cliente
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.CedulaCliente" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar Cliente
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}