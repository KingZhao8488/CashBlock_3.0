@model CashBlockApp.Models.Entities.Venta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Detalle de Venta #@Model.IdVenta</h2>
            <a asp-action="MisVentas" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Historial
            </a>
            <a asp-action="NuevaVenta" class="btn btn-success">
                <i class="bi bi-cart-plus"></i> Nueva Venta
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Información de la Venta -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Información de la Venta</h5>
                </div>
                <div class="card-body">
                    <p><strong>Fecha:</strong> @Model.FechaVenta?.ToString("dd/MM/yyyy")</p>
                    <p><strong>Vendedor:</strong> @Model.CedulaEmpleadoNavigation?.Nombre @Model.CedulaEmpleadoNavigation?.Apellido</p>
                    <p><strong>Cédula Vendedor:</strong> @Model.CedulaEmpleado</p>
                    <hr />
                    <p><strong>Cliente:</strong> @Model.CedulaClienteNavigation?.Nombre @Model.CedulaClienteNavigation?.Apellido</p>
                    <p><strong>Cédula Cliente:</strong> @Model.CedulaCliente</p>
                    @if (Model.CedulaClienteNavigation != null)
                    {
                        <p><strong>Teléfono:</strong> @Model.CedulaClienteNavigation.Telefono</p>
                        <p><strong>Dirección:</strong> @Model.CedulaClienteNavigation.Direccion</p>
                    }
                    <hr />
                    <p><strong>Total Productos:</strong> @Model.TotalProductos unidades</p>
                </div>
            </div>
        </div>

        <!-- Información de Pago -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-credit-card"></i> Información de Pago</h5>
                </div>
                <div class="card-body">
                    @if (Model.MetodoPagos != null && Model.MetodoPagos.Any())
                    {
                        var metodo = Model.MetodoPagos.First();
                        <p><strong>Tipo de Pago:</strong> @metodo.TipoMetodo</p>
                        <p><strong>Método:</strong> @metodo.NombreMetodo</p>
                    }
                    else
                    {
                        <p class="text-muted">No se registró método de pago</p>
                    }

                    <hr />

                    @if (Model.Facturas != null && Model.Facturas.Any())
                    {
                        var factura = Model.Facturas.First();
                        <p><strong>Factura #:</strong> @factura.IdFactura</p>
                        <p><strong>Fecha Factura:</strong> @factura.FechaVenta?.ToString("dd/MM/yyyy")</p>
                    }

                    <hr />
                    <h3 class="text-success mt-3">Total: $@string.Format("{0:N2}", Model.PrecioTotal)</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos Vendidos -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-box-seam"></i> Productos Vendidos</h5>
        </div>
        <div class="card-body">
            @if (Model.ProductoVenta != null && Model.ProductoVenta.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pv in Model.ProductoVenta)
                            {
                                var subtotal = (pv.IdProductoNavigation?.PrecioVenta ?? 0) * (pv.CantidadVendida ?? 0);
                                <tr>
                                    <td><strong>#@pv.IdProducto</strong></td>
                                    <td>@pv.IdProductoNavigation?.Nombre</td>
                                    <td>
                                        <span class="badge bg-primary">@pv.CantidadVendida unidades</span>
                                    </td>
                                    <td>$@string.Format("{0:N2}", pv.IdProductoNavigation?.PrecioVenta)</td>
                                    <td><strong>$@string.Format("{0:N2}", subtotal)</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-dark">
                                <td colspan="4" class="text-end"><strong>TOTAL:</strong></td>
                                <td><strong>$@string.Format("{0:N2}", Model.PrecioTotal)</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No hay productos en esta venta</p>
            }
        </div>
    </div>

    <!-- Botón para imprimir (opcional) -->
    <div class="row">
        <div class="col-12 text-center">
            <button onclick="window.print()" class="btn btn-secondary">
                <i class="bi bi-printer"></i> Imprimir Factura
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        @@media print {
            .btn, nav, footer {
                display: none !important;
            }
        }
    </style>
}