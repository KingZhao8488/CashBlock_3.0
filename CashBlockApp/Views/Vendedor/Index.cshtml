@{
    ViewData["Title"] = "Panel de Vendedor";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Panel de Vendedor - @ViewBag.NombreVendedor</h2>
            <p class="text-muted">Cédula: @ViewBag.CedulaVendedor</p>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Ventas Hoy</h5>
                    <h2>@ViewBag.VentasHoy</h2>
                    <p class="card-text">Ventas realizadas hoy</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Vendido</h5>
                    <h2>$@string.Format("{0:N2}", ViewBag.TotalVendido)</h2>
                    <p class="card-text">Todas tus ventas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Ventas</h5>
                    <h2>@ViewBag.TotalVentas</h2>
                    <p class="card-text">Ventas registradas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cart-plus" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Nueva Venta</h5>
                    <p class="card-text">Registra una nueva venta</p>
                    <a asp-action="NuevaVenta" class="btn btn-primary">Ir</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam" style="font-size: 3rem; color: #198754;"></i>
                    <h5 class="card-title mt-3">Productos</h5>
                    <p class="card-text">Ver productos disponibles</p>
                    <a asp-action="Productos" class="btn btn-success">Ver</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-receipt" style="font-size: 3rem; color: #ffc107;"></i>
                    <h5 class="card-title mt-3">Mis Ventas</h5>
                    <p class="card-text">Historial de ventas</p>
                    <a asp-action="MisVentas" class="btn btn-warning">Ver</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-arrow-right" style="font-size: 3rem; color: #dc3545;"></i>
                    <h5 class="card-title mt-3">Cerrar Sesión</h5>
                    <p class="card-text">Salir del sistema</p>
                    <a asp-controller="Login" asp-action="Logout" class="btn btn-danger">Salir</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}