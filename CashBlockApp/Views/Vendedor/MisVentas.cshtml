@model IEnumerable<CashBlockApp.Models.Entities.Venta>

@{
    ViewData["Title"] = "Mis Ventas";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Historial de Mis Ventas</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Panel
            </a>
            <a asp-action="NuevaVenta" class="btn btn-success">
                <i class="bi bi-cart-plus"></i> Nueva Venta
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID Venta</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Productos</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var venta in Model)
                    {
                        <tr>
                            <td><strong>#@venta.IdVenta</strong></td>
                            <td>@venta.FechaVenta?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (venta.CedulaClienteNavigation != null)
                                {
                                    <div>
                                        <strong>@venta.CedulaClienteNavigation.Nombre @venta.CedulaClienteNavigation.Apellido</strong><br />
                                        <small class="text-muted">CC: @venta.CedulaCliente</small>
                                    </div>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@venta.TotalProductos unidades</span>
                            </td>
                            <td class="text-success">
                                <strong>$@string.Format("{0:N2}", venta.PrecioTotal)</strong>
                            </td>
                            <td>
                                <a asp-action="DetalleVenta" asp-route-id="@venta.IdVenta" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Ver Detalle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Resumen -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5>Total de Ventas</h5>
                        <h2>@Model.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5>Total Vendido</h5>
                        <h2>$@string.Format("{0:N2}", Model.Sum(v => v.PrecioTotal ?? 0))</h2>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No tienes ventas registradas todavía.
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}