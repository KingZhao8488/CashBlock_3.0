@model IEnumerable<CashBlockApp.Models.Entities.Producto>

@{
    ViewData["Title"] = "Productos Disponibles";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Productos Disponibles</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Panel
            </a>
            <a asp-action="NuevaVenta" class="btn btn-success">
                <i class="bi bi-cart-plus"></i> Nueva Venta
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Productos" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <label>Buscar Producto</label>
                        <input type="text" name="buscar" class="form-control" placeholder="Nombre del producto" value="@ViewBag.Buscar" />
                    </div>
                    <div class="col-md-4">
                        <label>Categoría</label>
                        <select name="categoriaId" class="form-control">
                            <option value="">Todas las categorías</option>
                            @if (ViewBag.Categorias != null)
                            {
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    <option value="@cat.IdCategoria" selected="@(ViewBag.CategoriaSeleccionada == cat.IdCategoria)">
                                        @cat.NombreCategoria
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Productos" class="btn btn-secondary">Limpiar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de productos -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Categorías</th>
                        <th>Precio Venta</th>
                        <th>Stock</th>
                        <th>Proveedor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model)
                    {
                        <tr>
                            <td><strong>#@producto.IdProducto</strong></td>
                            <td>@producto.Nombre</td>
                            <td>
                                @if (producto.IdCategoria != null && producto.IdCategoria.Any())
                                {
                                    <span class="badge bg-info">@string.Join(", ", producto.IdCategoria.Select(c => c.NombreCategoria))</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin categoría</span>
                                }
                            </td>
                            <td class="text-success"><strong>$@string.Format("{0:N2}", producto.PrecioVenta)</strong></td>
                            <td>
                                <span class="badge @(producto.CantidadDisponible > 10 ? "bg-success" : producto.CantidadDisponible > 0 ? "bg-warning text-dark" : "bg-danger")">
                                    @producto.CantidadDisponible unidades
                                </span>
                            </td>
                            <td>
                                @if (producto.IdProveedorNavigation != null)
                                {
                                    <span>@producto.IdProveedorNavigation.Nombre</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-info mt-3">
            <strong>Total de productos:</strong> @Model.Count()
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No se encontraron productos.
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}